

<% if current_user.follows?(user) %>
  <button class="follow-toggle"
    data-user-id="<%= user.id %>"
    data-initial-follow-state="followed">
  </button>
<% else %>
  <button class="follow-toggle"
    data-user-id="<%= user.id %>"
    data-initial-follow-state="unfollowed">
  </button>
<% end %>
